<?xml version="1.0" encoding="utf-8" ?>
<!--vgl. auch CodeBehind-->
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X_Forms.App">
    <!--In dem App.xaml können globale XAML-Resourcen definiert werden.-->
    <Application.Resources>
        <!--Resourcen können in RessourceDictionaries definiert werden, um sie appübergreifend zu verwenden (vgl. RessourceDict.xaml). 
        Solche Dictionaries müssen innerhalb der App angemeldet werden.-->
        <ResourceDictionary Source="ResourceDict.xaml"/>
    </Application.Resources>
</Application>